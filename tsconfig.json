{
    "include": ["src/"],
    "compilerOptions": {
        "target": "ES2019",
        "module": "commonjs",
        "declaration": true,
        "outDir": "lib/",
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "forceConsistentCasingInFileNames": true
    },
    "typedocOptions": {
        "excludePrivate": true,
        "includeVersion": true,
        "name": "new-i18n",
        "out": "docs/build/",
        "readme": "README.md",
        "theme": "docs/theme/"
    }
}
